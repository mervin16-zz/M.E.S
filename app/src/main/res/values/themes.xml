<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MES" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_400</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Surface Brand Color -->
        <item name="colorSurface">@color/light_blue_grey_50</item>
        <item name="colorOnSurface">@color/grey_600</item>

        <!-- Primary Surface -->
        <item name="colorPrimarySurface">@color/white</item>

        <!-- Default background screen -->
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>

    </style>

</resources>