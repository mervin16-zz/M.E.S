<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MES" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorPrimaryVariant">@color/red_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface Brand Color -->
        <item name="colorSurface">@color/grey_700</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Default background screen -->
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- Set the Font Family -->
        <item name="fontFamily">@font/rubik</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>

    </style>

</resources>